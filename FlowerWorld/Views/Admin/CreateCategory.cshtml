@model FlowerWorld.Models.CategoryViewModel

@{
    ViewBag.Title = "Добавление категории";
}
<h2>Добавление категории</h2>
<hr />

<div class="row">
    <div class="col-sm-3">
        <div class="panel panel-default">
            @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="row form-group" style="margin-top:30px;">
                    <div class="col-sm-10 col-sm-offset-1">
                        @Html.TextBoxFor(x => x.CategoryName, new { @class = "required form-control", placeholder = "Введите наименование" })
                        @Html.ValidationMessageFor(x => x.CategoryName)
                    </div>
                </div>

                    <div class="row form-group" style="margin-top:30px;">
                        <div class="col-sm-10 col-sm-offset-1">
                            <button type="submit" class="btn btn-default  btn-add">Сохранить</button>
                            @Html.ActionLink("Отменить", "Category", "Admin", new { }, new { @class = "btn btn-default" })
                        </div>
                    </div>
            }
        </div>
    </div>
</div>