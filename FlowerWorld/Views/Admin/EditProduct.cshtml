@model FlowerWorld.Models.ProductViewModel

@{
    ViewBag.Title = "Редактирование";
}

<h2>Редактирование продукта</h2>

<div class="row">
    <div class="col-sm-5">
        <div class="panel panel-default">
            @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="row form-group" style="margin-top:30px;">
                    <div class="col-sm-10 col-sm-offset-1">
                        @Html.TextBoxFor(x => x.ProductName, new { @class = "required form-control", placeholder = "Введите наименование" })
                        @Html.ValidationMessageFor(x => x.ProductName)
                    </div>
                </div>

                <div class="row form-group" style="margin-top:30px;">
                    <div class="col-sm-10 col-sm-offset-1">
                        @Html.TextBoxFor(x => x.Price, new { @class = "required form-control", placeholder = "Введите цену" })
                        @Html.ValidationMessageFor(x => x.Price)
                    </div>
                </div>

                <div class="row form-group" style="margin-top:30px;">
                    <div class="col-sm-10 col-sm-offset-1">
                        @Html.TextBoxFor(x => x.Description, new { @class = "required form-control", placeholder = "Введите описание" })
                        @Html.ValidationMessageFor(x => x.Description)
                    </div>
                </div>

                <div class="row form-group" style="margin-top:30px;">
                    <div class="col-sm-10 col-sm-offset-1">
                        @Html.LabelFor(x => x.SelectListCategory)
                        @Html.DropDownListFor(x => x.CategoryId, Model.SelectListCategory, new { @class = "form-control" })
                    </div>
                </div>
                

                <div class="row form-group" style="margin-top:30px;">
                    <div class="col-sm-10 col-sm-offset-1">
                        <button type="submit" class="btn btn-default  btn-add">Сохранить</button>
                        @Html.ActionLink("Отменить", "Product", "Admin", new { }, new { @class = "btn btn-default" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>