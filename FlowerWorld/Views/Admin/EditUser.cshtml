@model FlowerWorld.Models.AuthViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
}

<h2>Редактирование пользователя</h2>
<hr />

<div class="row">
    <div class="col-sm-3">
        <div class="panel panel-default">
            @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="row form-group" style="margin-top:30px;">
                    <div class="col-sm-10 col-sm-offset-1">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "required form-control", placeholder = "Введите логин" })
                        @Html.ValidationMessageFor(x => x.UserName)
                    </div>
                </div>

                    <div class="row form-group" style="margin-top:30px;">
                        <div class="col-sm-10 col-sm-offset-1">
                            <button type="submit" class="btn btn-default  btn-add">Сохранить</button>
                            @Html.ActionLink("Отменить", "Users", "Admin", new { }, new { @class = "btn btn-default" })
                        </div>
                    </div>
            }
        </div>
    </div>
</div>



