@model FlowerWorld.Models.AuthViewModel

@{
    Layout = "~/Views/Auth/_Layout.cshtml";
}

<div class="login-bg">
    <div class="container-fluid">
        <div class="login-card">
            <h1>Авторизация</h1> <br />
            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
            {
                @Html.AntiForgeryToken();
                
                <input type="hidden" name="returnUrl" value="@Model.returnUrl" />
                <div class="form-group">
                    <label>Логин</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Введите логин" })
                </div>
                <div class="form-group">
                    <label>Пароль</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Введите пароль" })
                </div>
                <div class="form-group">
                    <label>Запомнить?</label>
                    @Html.EditorFor(x=>x.RememberMe)
                    @Html.ValidationMessageFor(x=>x.RememberMe," ",new {@class = "login-validate" })
                </div>
                @Html.ValidationSummary()
                <input type="submit" name="login" class="login login-submit" value="Войти">
            }
        </div>
    </div>
</div>