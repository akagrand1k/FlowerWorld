@model FlowerWorld.Models.OrderViewModel

<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="modal-content order-modal">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Отправка заказа</h4>
    </div>
    @using (Html.BeginForm("OrderSend","Catalog",FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x=>x.ProductId)
    <div class="modal-body">
        <dl class="dl-horizontal">
            <dt>Ваше имя</dt>
            <dd>
                @Html.TextBoxFor(x => x.CustomerName)
                @Html.ValidationMessageFor(x => x.CustomerName)
            </dd>

            <dt>Ваш телефон</dt>
            <dd>
                @Html.TextBoxFor(x => x.CusmomerPhone)
                @Html.ValidationMessageFor(x => x.CusmomerPhone)
            </dd>

            <dt>Описание</dt>
            <dd>
                @Html.TextBoxFor(x => x.DesciptionOrder,new { @class = "tb-description"})
                @Html.ValidationMessageFor(x => x.DesciptionOrder)
            </dd>
    </dl>
        <div class="order-add">
            <button type="submit" class="btn btn-default btn-add">Отправить</button>
        </div>
    </div>
    
    }
</div>